# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = "tab"
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2
