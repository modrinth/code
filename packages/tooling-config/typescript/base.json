{
	"$schema": "https://www.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"lib": ["esnext", "dom"],
		"allowSyntheticDefaultImports": true
	}
}
